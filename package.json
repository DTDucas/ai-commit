{
  "name": "ai-commit-dtducas",
  "displayName": "AI Commit Generator - DTDucas",
  "description": "Generate commit messages using Gemini or AWS Bedrock API",
  "version": "1.0.1",
  "publisher": "DTDucas",
  "author": {
    "name": "Duong Tran Quang (DTDucas)",
    "email": "baymax.contact@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DTDucas/ai-commit-generator"
  },
  "bugs": {
    "url": "https://github.com/DTDucas/ai-commit-generator/issues",
    "email": "baymax.contact@gmail.com"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "SCM Providers"
  ],
  "keywords": [
    "git",
    "commit",
    "ai",
    "gemini",
    "bedrock",
    "aws"
  ],
  "activationEvents": [
    "onCommand:ai-commit.generate",
    "workspaceContains:.git"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ai-commit.generate",
        "title": "Generate AI Commit",
        "icon": "$(sparkle)"
      },
      {
        "command": "ai-commit.openConfig",
        "title": "Open AI Commit Config"
      }
    ],
    "menus": {
      "scm/title": [
        {
          "command": "ai-commit.generate",
          "when": "scmProvider == git",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "ai-commit.generate",
          "when": "scmProvider == git"
        },
        {
          "command": "ai-commit.openConfig"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "ts-loader": "^9.4.1",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0"
  },
  "dependencies": {
    "@google/generative-ai": "^0.2.1",
    "@aws-sdk/client-bedrock-runtime": "^3.0.0"
  }
}
